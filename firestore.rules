rules_version = '2';

// The owner of the portfolio site. Only this user can write data.
// This is your unique Firebase User ID (UID).
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the current user is the owner.
    function isOwner() {
      // Replace this with your actual Firebase UID
      return request.auth != null && request.auth.uid == '4Cbh4ppvnEeeDwUagfyrtdXYPVS2';
    }

    // Public projects collection: Anyone can read. Only owner can write.
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isOwner();
    }
    
    // Public blog articles collection: Anyone can read. Only owner can write.
    match /blog_articles/{articleId} {
      allow read: if true;
      allow write: if isOwner();
    }
    
    // Public timeline events collection: Anyone can read. Only owner can write.
    match /timeline_events/{eventId} {
      allow read: if true;
      allow write: if isOwner();
    }

    // Contact Inquiries: Anyone can create (submit the form). Only the owner can read them.
    match /contact_inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isOwner();
    }

    // Admin data collection: Only the owner can read or write their own profile data.
    // This collection is now simplified to only hold the single admin's profile info.
    match /roles_admin/{userId} {
       allow read, write: if isOwner() && request.auth.uid == userId;
    }
  }
}
