rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin.
    // An admin is a user whose UID is a document in the 'roles_admin' collection.
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Helper function to check if the roles_admin collection is empty.
    // This is used to allow the very first admin to register.
    function isFirstAdminSetup() {
      // Use get() instead of exists() for list operations if needed, but for a single check, this is fine.
      // A more robust check for a collection group would be to size check a query.
      // For a single collection path, we check the size of the collection.
      return get(/databases/$(database)/documents/roles_admin).size == 0;
    }

    // Public collections: Anyone can read these.
    match /{collection}/{docId} where collection in ['projects', 'blog_articles', 'timeline_events'] {
      allow read: if true;
      allow write: if isAdmin(); // Only admins can create, update, or delete.
    }

    // Contact Inquiries: Anyone can create one, but only admins can see them.
    match /contact_inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // Admin Roles: This collection is highly restricted.
    match /roles_admin/{userId} {
        // ANY authenticated user can check for their OWN admin doc.
        // This is necessary for the client-side logic to verify admin status.
        allow get: if request.auth != null && request.auth.uid == userId;

        // An existing admin can read the full list of other admins.
        allow list: if isAdmin();
        
        // A user can CREATE an admin document IF they are creating it for themselves AND
        // EITHER they are already an admin (to add others) OR the roles_admin collection is empty (for the first admin).
        allow create: if request.auth != null && request.auth.uid == userId && (isAdmin() || isFirstAdminSetup());

        // Only an existing admin can update or delete roles.
        // (An admin cannot delete their own role unless there's another admin).
        // This logic can be enhanced later if needed.
        allow update, delete: if isAdmin();
    }
  }
}
