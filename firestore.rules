rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin by seeing if a
    // document with their UID exists in the roles_admin collection.
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Projects, blog articles, and timeline events are public to read.
    // Only admins can create, update, or delete them.
    match /{collection}/{docId} where collection in ['projects', 'blog_articles', 'timeline_events'] {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Contact inquiries can be created by anyone (e.g., from the public website).
    // However, only admins are allowed to read, update, or delete them.
    match /contact_inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // The roles_admin collection is highly restricted.
    // An admin can read the roles collection to check for other admins (if needed in UI)
    // A user can create their own role document ONLY if they are the first user.
    // No one can update or delete role documents from the client.
    match /roles_admin/{userId} {
        allow get, list: if isAdmin();
        allow create: if request.auth != null && request.auth.uid == userId;
        allow update, delete: if false;
    }
  }
}
