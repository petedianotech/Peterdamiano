rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Projects, blog posts, and timeline events are public to read,
    // but can only be written by admins.
    match /{collection}/{docId} where collection in ['projects', 'blog_articles', 'timeline_events'] {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Contact inquiries can be created by anyone, but only read and managed by admins.
    match /contact_inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // Admin roles themselves can only be read by the admin to verify their role,
    // and cannot be listed or written to from the client-side for security.
    match /roles_admin/{userId} {
        allow get: if request.auth != null && request.auth.uid == userId;
        allow list, write: if false;
    }
  }
}
