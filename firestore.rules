rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the current user is the owner (site admin).
    // The owner's UID is hardcoded for initial setup. Only this user can manage roles.
    function isOwner() {
      // Replace this with your actual Firebase UID for site ownership
      return request.auth != null && request.auth.uid == '4Cbh4ppvnEeeDwUagfyrtdXYPVS2';
    }

    // Helper function to check if the user has an admin role document.
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Public projects collection: Anyone can read. Only admins can write.
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Public blog articles collection: Anyone can read. Only admins can write.
    match /blog_articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Public timeline events collection: Anyone can read. Only admins can write.
    match /timeline_events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Contact Inquiries: Anyone can create (submit form). Only admins can read them.
    match /contact_inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Admin roles collection:
    // - Only the owner can create/delete/update admin roles.
    // - Authenticated users can check if they themselves are an admin (for UI checks).
    match /roles_admin/{userId} {
       allow read: if request.auth.uid == userId; // Allow users to check their own role
       allow write: if isOwner(); // Only the main owner can change roles
    }
  }
}
