rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public projects collection: Anyone can read. No one can write.
    match /projects/{projectId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Public blog articles collection: Anyone can read. No one can write.
    match /blog_articles/{articleId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Public timeline events collection: Anyone can read. No one can write.
    match /timeline_events/{eventId} {
      allow read: if true;
      allow write: if false;
    }

    // Contact Inquiries: Anyone can create (submit the form). No one can read/write otherwise.
    match /contact_inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
